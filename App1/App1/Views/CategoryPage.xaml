<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodels="clr-namespace:App1.ViewModels" x:DataType="viewmodels:CategoryViewModel"
             x:Class="App1.Views.CategoryPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Title" FontSize="Medium"  />
            <Entry Text="{Binding Title, Mode=TwoWay}" FontSize="Medium" />

            <Label Text="Description" FontSize="Medium" />
            <Editor Text="{Binding Description, Mode=TwoWay}" AutoSize="TextChanges" FontSize="Medium" />

            <Label Text="Success Rate" FontSize="Medium" />
            <Editor Text="{Binding SuccessRate, Mode=TwoWay}" AutoSize="TextChanges" FontSize="Medium" />

            <StackLayout Orientation="Horizontal">
                <Button Text="Cancel" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="Save" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>